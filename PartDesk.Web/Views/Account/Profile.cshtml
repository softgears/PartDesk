@using PartDesk.Web.Classes.Ext
@model dynamic

@{
    ViewBag.Title = "Профиль";
    Layout = "../Shared/AccountLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <form action="/account/profile/update" id="user-info-form" role="form" class="form-horizontal" enctype="multipart/form-data" method="POST">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="icon"><i class="icon20 i-settings"></i></div>
                    <h4>Свойства компании</h4>
                    <a href="#" class="minimize"></a>
                </div>
                <div class="panel-body">
                    <div class="page-header">
                        <h4>Общие сведения</h4>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="user-email-field">Email пользователя</label>
                        <div class="col-lg-10">
                            <input class="form-control disabled" readonly="readonly" name="Email" type="text" id="user-email-field" value="@ViewContext.CurrentUser().Email">
                        </div>
                    </div>
                    <div class="page-header">
                        <h4>Личные сведения</h4>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="user-fname-field">Имя</label>
                        <div class="col-lg-10">
                            <input class="form-control" name="FirstName" type="text" id="user-fname-field" value="@ViewContext.CurrentUser().FirstName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="user-sname-field">Отчество</label>
                        <div class="col-lg-10">
                            <input class="form-control" name="SurName" type="text" id="user-sname-field" value="@ViewContext.CurrentUser().SurName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="user-lname-field">Фамилия</label>
                        <div class="col-lg-10">
                            <input class="form-control" name="LastName" type="text" id="user-lname-field" value="@ViewContext.CurrentUser().LastName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label" for="user-phone-field">Телефон</label>
                        <div class="col-lg-10">
                            <input class="form-control" name="Phone" type="text" id="user-phone-field" value="@ViewContext.CurrentUser().Phone">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2">
                            <div class="pad-left15">
                                <button type="submit" class="btn btn-primary">Сохранить</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $("#user-info-form").validate({
            rules: {
                FirstName: {
                    required: true,
                    maxlength: 50
                },
                LastName: {
                    required: true,
                    maxlength: 50
                },
                SurName: {
                    required: true,
                    maxlength: 50
                },
                Phone: {
                    required: true,
                    maxlength: 50
                }
            }
        });
        $("#user-phone-field").mask("9 (999) 999-99-99");
    })
</script>