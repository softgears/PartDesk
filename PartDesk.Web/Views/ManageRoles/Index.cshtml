@using PartDesk.Web.Classes.Ext
@model System.Collections.Generic.List<PartDesk.Domain.Entities.Role>

@{
    ViewBag.Title = "Список ролей";
    Layout = "../Shared/AccountLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="icon"><i class="icon20 i-table"></i></div>
                <h4>Роли в системе</h4>
                <a href="#" class="minimize"></a>
            </div>
            <!-- End .panel-heading -->
            <div class="panel-body">
                <p>
                    <a href="/manage/roles/add" class="btn btn-info tip" title="Добавить новую роль в систему">Добавить роль</a>    
                </p>
                <table class="table table-striped table-bordered table-hover" id="companies-table">
                    <thead>
                        <tr>
                            <th>
                                ИД
                            </th>
                            <th>
                                Системное имя
                            </th>
                            <th>
                                Отображаемое имя
                            </th>
                            <th>
                                Пользователей
                            </th>
                            <th>
                                Создана
                            </th>
                            <th>
                                Отредактирована
                            </th>
                            <th>
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="7">
                                    Не найдено ролей
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var role in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="/manage/roles/@role.Id/edit">@role.Id</a>
                                    </td>
                                    <td>
                                        <a href="/manage/roles/@role.Id/edit">@role.SystemName</a>
                                    </td>
                                    <td>
                                        <a href="/manage/roles/@role.Id/edit">@role.DisplayName</a>
                                    </td>
                                    <td>
                                        @role.GetUsersCount()
                                    </td>
                                    <td>
                                        @role.DateCreated.FormatDateTime()
                                    </td>
                                    <td>
                                        @role.DateModified.FormatDateTime()
                                    </td>
                                    <td style="width: 45px">
                                        @if (role.Id > 2)
                                        {
                                            <a href="/manage/roles/@role.Id/delete" class="btn btn-xs btn-danger tip" onclick="return confirm('Вы действительно хотите удалить эту роль?')" title="Удалить роль из системы"><i class="icon12 i-remove"></i></a>    
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
