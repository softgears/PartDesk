@model PartDesk.Domain.Entities.Client

<form action="/clients/save" id="client-form" role="form" class="form-horizontal" method="POST">
    @Html.HiddenFor(m => m.Id)
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="icon"><i class="icon20 i-settings"></i></div>
            <h4>Свойства клиента</h4>
            <a href="#" class="minimize"></a>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label class="col-lg-2 control-label" for="client-lname-field">Фамилия</label>
                <div class="col-lg-10">
                    <input class="form-control" name="LastName" type="text" id="client-lname-field" value="@Model.LastName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="client-fname-field">Имя</label>
                <div class="col-lg-10">
                    <input class="form-control" name="FirstName" type="text" id="client-fname-field" value="@Model.FirstName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="client-sname-field">Отчество</label>
                <div class="col-lg-10">
                    <input class="form-control" name="SurName" type="text" id="client-sname-field" value="@Model.SurName">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="client-phone-field">Телефон</label>
                <div class="col-lg-10">
                    <input class="form-control" name="Phone" type="text" id="client-phone-field" value="@Model.Phone">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="client-email-field">Email</label>
                <div class="col-lg-10">
                    <input class="form-control" name="Email" type="text" id="client-email-field" value="@Model.Email">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="client-address-field">Адрес</label>
                <div class="col-lg-10">
                    <textarea class="form-control" name="Address" id="client-address-field">@Model.Address</textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2">
                    <div class="pad-left15">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <button type="button" class="btn" onclick="window.location.href='/clients'; return false;">Отмена</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        $("#client-form").validate({
            rules: {
                FirstName: {
                    required: true,
                    maxlength: 255
                },
                LastName: {
                    required: true,
                    maxlength: 255
                },
                SurName: {
                    required: true,
                    maxlength: 255
                },
                Email: {
                    required: true,
                    email: true
                },
                Phone: {
                    required: true,
                    maxlength: 20
                },
                Address: {
                    required: true
                }
            }
        });
        $("#client-phone-field").mask("9 (999) 999-99-99");
    });
</script>